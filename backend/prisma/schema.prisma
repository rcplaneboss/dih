generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                String   @id @default(cuid())
  name              String
  brand             String
  category          String
  price             Float
  cost              Float    @default(0)
  quantity          Int      @default(0)
  lowStockThreshold Int      @default(10)
  barcode           String?
  description       String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  lastSold          DateTime?

  sales Sale[]

  @@map("products")
}

model Sale {
  id            String   @id @default(cuid())
  serialNumber  Int?
  batchId       String?
  productId     String
  productName   String
  brand         String
  category      String?
  quantity      Int
  price         Float
  cost          Float    @default(0)
  subtotal      Float
  discount      Float    @default(0)
  total         Float
  paymentMethod String   @default("cash")
  customerNotes String?
  receiptNumber String?
  soldBy        String   @default("System")
  saleDate      String
  saleTime      String
  timestamp     DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])

  @@map("sales")
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  @@map("categories")
}

model Brand {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  @@map("brands")
}

model Expense {
  id            String   @id @default(cuid())
  description   String
  amount        Float
  category      String
  paymentMethod String   @default("cash")
  notes         String?
  date          String
  time          String
  timestamp     DateTime @default(now())

  @@map("expenses")
}

model Settings {
  id                String   @id @default(cuid())
  currency          String   @default("NGN")
  taxRate           Float    @default(0)
  storeName         String   @default("GadgetStore Pro")
  lowStockThreshold Int      @default(10)
  updatedAt         DateTime @updatedAt

  @@map("settings")
}